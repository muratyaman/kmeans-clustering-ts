{
  "name": "k-means-clustering-ts",
  "version": "1.0.0",
  "description": "K-Means clustering of multi-dimensional observations using TypeScript and Node",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:ts": "tsc -b tsconfig.build.json",
    "build": "npm run clean && npm run build:ts",
    "clean": "rm -rf dist",
    "sample1": "node ./bin/index.js ./samples/sample1.csv",
    "test": "mocha -r ts-node/register ./tests/**/*.test.ts",
    "test:coverage": "nyc npm run test"
  },
  "keywords": [
    "kmeans",
    "cluster",
    "clustering"
  ],
  "author": "Haci Murat Yaman",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.20",
    "@types/mocha": "^8.2.3",
    "@types/node": "^16.0.0",
    "chai": "^4.3.4",
    "mocha": "^9.0.2",
    "nyc": "^15.1.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
